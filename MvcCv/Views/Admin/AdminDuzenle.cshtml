@model MvcCv.Models.Entity.TblAdmin
@{
    ViewBag.Title = "AdminDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Kullanıcı Güncelleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Kullanıcı Adınız")
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Giriniz." })
    <br />
    @Html.Label("Şifreniz")
    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", placeholder = "Şifrenizi Giriniz." })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>

