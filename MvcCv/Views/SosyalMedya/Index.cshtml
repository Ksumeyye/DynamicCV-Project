@using MvcCv.Models.Entity
@model List<TblSosyalMedya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--{string  renk="";}-->
<!--{string labelrenk="";}-->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Simple Tables</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Hesaplarım</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                        <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı EKle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 1px">#</th>
                                            <!--    <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>-->
                                            <th>Sosyal Medya</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <!--if(item.Oran>=0 && item.Oran<=50)
                                            {
                                            renk="progress-bar bg-danger";
                                            labelrenk="badge bg-danger";
                                            }
                                            if(item.Oran>=51 && item.Oran<=70)
                                            {
                                            renk="progress-bar bg-warning";
                                            labelrenk="badge bg-warning";
                                            }
                                            if(item.Oran>=71 && item.Oran<=84)
                                            {
                                            renk="progress-bar bg-primary";
                                            labelrenk="badge bg-primary";
                                            }
                                            if(item.Oran>=85 && item.Oran<=100)
                                            {
                                            renk="progress-bar bg-success";
                                            labelrenk="badge bg-success";
                                            }
                                            -->
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Ad</td>
                                                <td>@item.Durum</td>
                                                <!-- <td>
                                                <div class="progress progress-xs">
                                                <div class="progress-bar progress-bar-danger" style="width: item.Oran%"></div>
                                                </div>
                                                </td>
                                                <td><span class="labelrenk">item.Oran%</span></td> -->

                                                <td>
                                                    <a href="/SosyalMedya/SosyalMedyaGetir/@item.ID" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i> Düzenle
                                                    </a>
                                                </td>

                                                <td>
                                                    <a href="/SosyalMedya/SosyalMedyaSil/@item.ID" class="btn btn-danger btn-sm" onclick="return confirm('Bu projeyi silmek istediğinize emin misiniz?');">
                                                        <i class="fas fa-trash"></i> Sil
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content"</div>
                <div class="modal-header">
                    <h2 class="modal-title">Sosyal Medya Hesabı Ekleme Paneli</h2>
                </div>
                <form method="post" action="/SosyalMedya/Ekle/">
                    <div class="modal-body">
                        <label>Sosyal Medya Adı</label>
                        <input type="text" name="Ad" class="form-control" />
                        <br />
                        <label>Sosyal Medya Linki</label>
                        <input type="text" name="Link" class="form-control" />
                        <br />
                        <label>Sosyal Medya İkonu</label>
                        <input type="text" name="ikon" class="form-control" />
                        <br />
                        <button class="btn btn-info">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
