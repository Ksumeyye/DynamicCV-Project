@using MvcCv.Models.Entity
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header p-2">
                                </div><!-- /.card-header -->
                                <div class="card-body">
                                        <!-- /.tab-pane -->
                                        <div class="tab-pane" id="timeline">
                                            <!-- The timeline -->
                                            <div class="timeline timeline-inverse">
                                                <!-- timeline time label -->
                                                @foreach (var item in Model)
                                                {
                                                    if (item.ID % 2 == 0)
                                                    {


                                                        <div class="time-label">
                                                            <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-dark">
                                                                <span class="bg-gray-light">
                                                                    @item.Tarih
                                                                </span>
                                                            </a>
                                                        </div>
                                                    }
                                                    else if (item.ID % 2 == 1)
                                                    {
                                                        <div class="time-label">
                                                            <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-danger">
                                                                <span class="bg-light">
                                                                    @item.Tarih
                                                                </span>
                                                            </a>
                                                        </div>
                                                    }

                                                    <!-- /.timeline-label --><!-- timeline item -->

                                                    <div>
                                                        <i class="fas fa-comment bg-primary"></i>
                                                        <div class="timeline-item">
                                                            <div class="timeline-body">
                                                                <strong>
                                                                    @item.Aciklama1
                                                                </strong>
                                                            </div>
                                                            <div class="timeline-body">
                                                                @item.Aciklama2
                                                            </div>
                                                            <div class="timeline-body">
                                                                <strong>Teknolojiler:</strong> @item.Aciklama3
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            <a href="/Sertifika/YeniSertifika/" class="btn btn-outline-secondary">Yeni Sertifika Girişi</a>
                                        </div>
                                    </div>
                                </div><!-- /.card-body -->
                            </div>
                        </div>
                    </div>
            </section>
</body>
</html>


