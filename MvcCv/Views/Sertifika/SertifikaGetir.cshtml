@model MvcCv.Models.Entity.TblSertifikalarim
@{
    ViewBag.Title = "SertifikaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Sertifika Düzenleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Sertifika Tarihi")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Sertifikanın Alındığı Kurum")
    @Html.TextBoxFor(x => x.Aciklama1, new { @class = "form-control"})
    <br />
    <br />
    @Html.Label("Sertifika İsmi")
    @Html.TextBoxFor(x => x.Aciklama2, new { @class = "form-control"})
    <br />
    <br />
    @Html.Label("Sertifika Açıklaması")
    @Html.TextBoxFor(x => x.Aciklama3, new { @class = "form-control"})
    <br />
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>